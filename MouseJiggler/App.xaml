<Application x:Class="MouseJiggler.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MouseJiggler"
             xmlns:p = "clr-namespace:MouseJiggler.Properties"
             xmlns:tb="http://www.hardcodet.net/taskbar"
             Startup="Application_Startup"
             Exit="Application_Exit"
             ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <local:StartStopCommand x:Key="StartStopCommand" />
        <local:OpenSettingsCommand x:Key="OpenSettingsCommand" />
        <local:ShutdownCommand x:Key="ShutdownCommand" />

        <tb:TaskbarIcon x:Key="NotifyIcon"
                        IconSource="jiggler32.png"
                        MenuActivation="RightClick">

            <!-- Set a simple context menu  -->
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="{x:Static p:XamlResources.Menu_DeActivate}" Command="{StaticResource StartStopCommand}"
                              Name="MenuItemActivate"/>
                    <MenuItem Header="{x:Static p:XamlResources.Menu_Settings}" Command="{StaticResource OpenSettingsCommand}"/>
                    <Separator/>
                    <MenuItem Header="{x:Static p:XamlResources.Menu_Shutdown}" Command="{StaticResource ShutdownCommand}" />
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>

        </tb:TaskbarIcon>
    </Application.Resources>
</Application>
